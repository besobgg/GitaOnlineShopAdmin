@model List<SalesOrderHeader>

<table class="table table-striped table-bordered ">
    <thead>
        <tr>
            <th>
                Order Date
            </th>
            <th>
                Sub Total
            </th>
            <th>
                Orders Count
            </th>
            <th>
                Order Details
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var order in Model) {
        <tr>
            <td>
                @order.OrderDate
            </td>
            <td>
                @order.SubTotal
            </td>
            <td>
                @order.SalesOrderDetails.Count()
            </td>
            <td>
                <table>
                        @foreach (var orderDetail in order.SalesOrderDetails)
                        {
                            <tr>
                                <td>@orderDetail.OrderQty</td>
                                <td>@orderDetail.UnitPrice</td>
                                <td>@orderDetail.LineTotal</td>
                            </tr>
                        }
                    </table>
            </td>
        </tr>
}
    </tbody>
</table>